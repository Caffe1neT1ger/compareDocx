# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Markdown files
*.md text eol=lf

# Text files
*.txt text eol=lf

# Config files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Documentation
docs/**/*.md text eol=lf

# Binary files
*.docx binary
*.xlsx binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Ignore line ending differences for these files
*.bat text eol=crlf
*.cmd text eol=crlf

